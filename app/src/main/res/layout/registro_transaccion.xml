<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="nombre_comprador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/comprador"
        android:hint="@string/pedro_paco"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:text="Nombre Vendedor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@id/vendedor"
        android:hint="Juan Perez"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:text="Modelo Vehiculo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/modelo"
        android:hint=" TOYOTA 4X4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:text="Descuento En Precio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/descuento"
        android:hint="1000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:text="Precio Total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/precioTotal"
        android:hint="6000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:text="Numero De Importacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/numeroImport"
        android:hint="12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:text="Ciudad "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/ciudad"
        android:hint="Cochabamba"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />




</LinearLayout>