<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">



    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/registro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.example.alvaro.pruebacliente.MainActivity">


        <TextView
            android:text="BIENVENIDO AL REGISTRO DE CLIENTE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView" />

        <TextView
            android:text="NOMBRES"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvnombres" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etnombres"
            android:hint="Pedro Paco" />

        <TextView
            android:text="APELLIDOS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvapellidos" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etapellidos"
            android:hint="Pica Piedra" />

        <TextView
            android:text="CI"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvci" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/etci"
            android:inputType="number"
            android:hint="8527693" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="FECHA NACIMIENTO"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvnacimiento" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnnacimiento"
                android:elevation="0dp"
                style="@style/Widget.AppCompat.Button.Borderless" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvfecha"
                android:layout_below="@+id/tvnacimiento"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
        </RelativeLayout>

        <TextView
            android:text="CORREO"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvcorreo" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/etcorreo"
            android:hint="pedro@rocas.com" />

        <TextView
            android:text="CELULAR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvcelular" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/etcelular" />

        <TextView
            android:text="GENERO"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvgenero" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rbtngenero">

            <RadioButton
                android:text="MASCULINO"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rbtnmasculino"
                android:layout_weight="1" />

            <RadioButton
                android:text="FEMENINO"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rbtnfemenino"
                android:layout_weight="1" />

        </RadioGroup>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:text="REGISTRAR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnregistrar"
                android:layout_weight="1" />

            <Button
                android:text="CANCELAR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btncancelar"
                android:layout_weight="1" />
        </LinearLayout>


    </LinearLayout>
</ScrollView>